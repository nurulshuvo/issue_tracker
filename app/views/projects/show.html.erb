<p id="notice"><%= notice %></p>

<p>
  <b>Name:</b>
  <%= @project.name %>
</p>

<p>
  <b>Description:</b>
  <%= @project.description %>
</p>

<h1>Issues</h1>
<ul>
	<% @project.issues.each do |issue|%>
		<li><%= link_to(issue.title, issue_path(issue.id)) %></li>
	<% end %>
</ul>


<%= link_to 'Edit', edit_project_path(@project) %> |
<%= link_to 'Back', projects_path %>
